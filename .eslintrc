{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "flow-vars"
  ],
  "rules": {
    "flow-vars/define-flow-type": 2,
    "flow-vars/use-flow-type": 1,
    "no-constant-condition": 0,
    "prefer-const": 1,
    "no-const-assign": 1,
    "no-var": 1,
    "comma-dangle": [
      1,
      "always-multiline"
    ],
    "array-callback-return": 1,
    "template-curly-spacing": 1,
    "prefer-arrow-callback": 1,
    "arrow-spacing": 1,
    "arrow-parens": 1,
    "arrow-body-style": 1,
    "one-var": [
      1,
      "never"
    ],
    "no-unneeded-ternary": 1,
    "brace-style": 1,
    "space-before-blocks": 1,
    "keyword-spacing": 1,
    "newline-per-chained-call": 1,
    "padded-blocks": [
      1,
      "never"
    ],
    "space-in-parens": 1,
    "array-bracket-spacing": 1,
    "comma-style": 1,
    "quotes": [
      1,
      "single"
    ],
    "semi": 1,
    "radix": 1,
    "camelcase": 1
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ]
}
